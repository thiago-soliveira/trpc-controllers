{
  "name": "trpc-controllers",
  "version": "1.0.9",
  "description": "Decorators and class-based routing for tRPC v11",
  "keywords": [
    "trpc",
    "tRPC",
    "controllers",
    "decorators",
    "routing",
    "router",
    "typescript",
    "node",
    "rpc",
    "api"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiago-soliveira/trpc-controllers.git"
  },
  "bugs": {
    "url": "https://github.com/thiago-soliveira/trpc-controllers/issues"
  },
  "homepage": "https://github.com/thiago-soliveira/trpc-controllers#readme",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "test": "tsc && VITEST_INCLUDE_DIST=1 vitest run dist/tests/typing.spec.js",
    "test:ci": "tsc && VITEST_INCLUDE_DIST=1 vitest run dist/tests/typing.spec.js --maxWorkers 1 --minWorkers 1",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "trpc-controllers": "bin/trpc-controllers.cjs"
  },
  "peerDependencies": {
    "@trpc/server": "^11.0.0",
    "zod": "^3.23.8",
    "superjson": "^2.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "eslint-config-prettier": "^9.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0",
    "@trpc/server": "^11.0.0",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
